<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <trofunlait.projects.financetrackerv2.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Transaction"
        android:id="@+id/textView7"
        android:layout_marginStart="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textSize="40sp"
        />

    <trofunlait.projects.financetrackerv2.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount"
        android:id="@+id/textView5"
        android:layout_above="@+id/spinner_categories"
        android:layout_alignStart="@+id/textView6"
        android:textSize="35sp"
        />

    <trofunlait.projects.financetrackerv2.CustomEditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_amount"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginStart="44dp"
        android:textSize="35sp"
        />

    <trofunlait.projects.financetrackerv2.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category"
        android:id="@+id/textView6"
        android:layout_above="@+id/datePicker"
        android:layout_alignStart="@+id/textView7"
        android:textSize="35sp"
        />


    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="UPDATE"-->
        <!--android:id="@+id/btn_savetransaction"-->
        <!--android:layout_marginBottom="26dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignEnd="@+id/datePicker" />-->

    <trofunlait.projects.financetrackerv2.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update"
        android:id="@+id/btn_savetransaction"
        android:textSize="40sp"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/datePicker"
        android:textColor="@color/colorPrimaryDark"
        />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_categories"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/txt_amount"
        android:spinnerMode="dialog"
        android:layout_alignParentEnd="true" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Cancel"-->
        <!--android:id="@+id/btn_cancel"-->
        <!--android:layout_alignBottom="@+id/btn_savetransaction"-->
        <!--android:layout_toStartOf="@+id/btn_savetransaction" />-->

    <trofunlait.projects.financetrackerv2.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cancel"
        android:id="@+id/btn_cancel"
        android:textSize="40sp"
        android:textColor="@color/colorRed"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/btn_savetransaction"
        android:layout_toLeftOf="@+id/spinner_categories"
        android:layout_toStartOf="@+id/spinner_categories" />

    <DatePicker
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_above="@+id/btn_savetransaction"
        android:layout_alignEnd="@+id/txt_amount"
        android:layout_marginBottom="33dp" />

</RelativeLayout>
